<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="XamarinForms.MilkDetailView">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="End" Grid.Column="0" Grid.Row="0" Text="Estimated Amount"></Label>
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="End" Grid.Column="0" Grid.Row="1" Text="Actual Amount"></Label>
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="End" Grid.Column="0" Grid.Row="2" Text="Comments"></Label>
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="End" Grid.Column="0" Grid.Row="3" Text="Start Time"></Label>
                <Label VerticalTextAlignment="Center" HorizontalTextAlignment="End" Grid.Column="0" Grid.Row="4" Text="Finish Time"></Label>

                <Entry VerticalTextAlignment="Center" Keyboard="Numeric" Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding NewMilkLog.EstimatedAmount, Mode=TwoWay}"></Entry>
                <Label VerticalTextAlignment="Center" Grid.Row="0" Grid.Column="2"  HorizontalTextAlignment="Start" Text="{Binding NewMilkLog.MeasurementType}"></Label>

                <Entry VerticalTextAlignment="Center" Keyboard="Numeric" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding NewMilkLog.Amount, Mode=TwoWay}"></Entry>
                <Label VerticalTextAlignment="Center" Grid.Row="1" Grid.Column="2" HorizontalTextAlignment="Start" Text="{Binding NewMilkLog.MeasurementType}"></Label>


                <Editor Grid.Row="2" Grid.Column="1" Text="{Binding NewMilkLog.Comment}"></Editor>
                <DatePicker Format="dd/MM/yy"  Grid.Row="3" Grid.Column="1" Date="{Binding NewMilkLog.StartTime.Date, Mode=TwoWay}"></DatePicker>
                <TimePicker Format="hh:mmtt" Grid.Row="3" Grid.Column="2" Time="{Binding NewMilkLog.StartTime.TimeOfDay, Mode=TwoWay}"></TimePicker>
                <DatePicker Format="dd/MM/yy"  Grid.Row="4" Grid.Column="1" Date="{Binding NewMilkLog.FinishTime.Date, Mode=TwoWay}"></DatePicker>
                <TimePicker Format="hh:mmtt" Grid.Row="4" Grid.Column="2" Time="{Binding NewMilkLog.FinishTime.TimeOfDay, Mode=TwoWay}"></TimePicker>
            </Grid>
            <Button x:Name="SaveChangesButton" Text="Save Changes"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

